<div class="jumbotron">
  <h1 class="display-4"><%= @friend.firstName %> <%= @friend.lastName %></h1>

  <p class="lead"><%= @friend.Email %></p>
  <p class="lead"><%= @friend.Phone %></p>
  <p class="lead"><%= @friend.Twitter %></p>

  <%= link_to 'Edit friend', edit_friend_path(@friend), class:"btn btn-dark" %>
  <%= link_to 'Delete', @friend, method: :delete, data: { confirm: 'Are you sure?'}, class:"btn btn-danger" %>
  <%= link_to 'Back', friends_path, class:"btn btn-dark" %>
</div>


