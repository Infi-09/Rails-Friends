<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field form-group">
    <% f.label :email %><br />
    <%= f.email_field :email, class:"form-control", placeholder:"Enter Email", autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field form-group">
    <br />
    <% f.label :password %>
    <%= f.password_field :password, autocomplete: "new-password", class:"form-control", placeholder:"( 6 characters minimum )" %>
  </div>

  <div class="field form-group">
    <% f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control", placeholder:"Re-enter password" %>
  </div>
  <br>
  <div class="actions">
    <%= f.submit "Sign up", class: "btn btn-dark" %>
  </div>
<% end %>
<br>
<%= render "devise/shared/links" %>
